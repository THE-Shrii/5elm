# Backend Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Company Information
COMPANY_NAME=5ELM
COMPANY_EMAIL=support@5elm.com

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/5elm

# SQL Server Configuration
SQL_SERVER=103.174.102.61
SQL_USER=FiveELMUser
SQL_PASSWORD=FiveELM@@2017##
SQL_DATABASE=master
SQL_ENCRYPT=false
SQL_TRUST_CERT=true

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_make_it_different_from_jwt_secret
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (NodeMailer SMTP)
EMAIL_FROM=noreply@5elm.com
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Payment Gateway Configuration (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Redis Configuration (Optional, but recommended for production)
REDIS_URL=redis://localhost:6379
SKIP_REDIS=false

# Elasticsearch Configuration (Optional, for advanced search)
ELASTICSEARCH_NODE=http://localhost:9200
SKIP_ELASTICSEARCH=false

# Security Configuration
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your_32_character_encryption_key_for_sensitive_data

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Configuration (comma-separated allowed origins)
# For API-only backend, you can specify your frontend URL or use * for development
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
# Or use wildcard for development (not recommended for production)
# CLIENT_URL=*

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Elasticsearch Configuration (Optional)
ELASTICSEARCH_URL=http://localhost:9200

# Cloudinary Configuration (for image uploads - Optional)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# VirusTotal API (for file security scanning - Optional)
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# Instagram API Configuration (Optional)
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:5000/api/v1/instagram/auth/callback

# SendGrid Configuration (Alternative to SMTP - Optional)
SENDGRID_API_KEY=your_sendgrid_api_key

# Twilio Configuration (For SMS notifications - Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Admin Configuration
ADMIN_EMAIL=admin@5elm.com
ADMIN_PASSWORD=Admin@123456

# Logging Configuration
LOG_LEVEL=debug

# Feature Flags
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_AUDIT_LOGGING=true

# Database Seeds (for development)
SEED_DATABASE=false
SEED_ADMIN_USER=false
SEED_SAMPLE_PRODUCTS=false
