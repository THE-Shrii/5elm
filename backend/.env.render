# Environment configuration specifically for Render deployment

# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration (CRITICAL - MUST SET THIS IN RENDER)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/5elm

# JWT Configuration (CRITICAL - GENERATE STRONG SECRET)
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long_and_random
JWT_EXPIRES_IN=7d

# Email Configuration (Optional - for notifications)
EMAIL_FROM=noreply@5elm.com
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Payment Gateway (CRITICAL - FOR PAYMENTS)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Redis Configuration (Optional - leave blank for Render)
# REDIS_URL=

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Configuration (UPDATE AFTER FRONTEND DEPLOYMENT)
CORS_ORIGIN=https://your-frontend-app-name.onrender.com

# Feature Flags for Production
SKIP_REDIS=true
SKIP_ELASTICSEARCH=true

# Logging Configuration
LOG_LEVEL=info

# Admin Configuration (Optional)
ADMIN_EMAIL=admin@5elm.com
ADMIN_PASSWORD=secure_admin_password_123

# Render-specific optimizations
DISABLE_AUDIT_LOGGING=false
ENABLE_COMPRESSION=true
