# Instagram API Configuration
# Add these to your .env file in ecommerce-backend

# ==========================================
# INSTAGRAM BASIC DISPLAY API (Personal Accounts)
# ==========================================
INSTAGRAM_CLIENT_ID=your_instagram_app_id
INSTAGRAM_CLIENT_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=https://yourdomain.com/auth/instagram/callback

# ==========================================
# FACEBOOK/META GRAPH API (Business Accounts) - RECOMMENDED
# ==========================================
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_account_id
INSTAGRAM_ACCESS_TOKEN=your_long_lived_access_token

# ==========================================
# INSTAGRAM GRAPH API ENDPOINTS
# ==========================================
INSTAGRAM_GRAPH_API_BASE=https://graph.facebook.com/v18.0
INSTAGRAM_BASIC_DISPLAY_BASE=https://graph.instagram.com

# ==========================================
# WEBHOOK CONFIGURATION (Optional)
# ==========================================
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
INSTAGRAM_WEBHOOK_SECRET=your_webhook_secret

# ==========================================
# OAUTH CONFIGURATION
# ==========================================
INSTAGRAM_OAUTH_BASE=https://api.instagram.com/oauth
FACEBOOK_OAUTH_BASE=https://www.facebook.com/v18.0/dialog/oauth

# ==========================================
# PERMISSIONS/SCOPES NEEDED
# ==========================================
# For Business Accounts (Recommended):
# - instagram_basic
# - instagram_content_publish  
# - instagram_manage_insights
# - instagram_manage_comments
# - pages_show_list
# - pages_read_engagement
# - business_management

# For Personal Accounts (Limited):
# - user_profile
# - user_media
